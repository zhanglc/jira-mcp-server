{
  "name": "jira-simple-client",
  "version": "1.0.0",
  "description": "Simple Jira Server API client in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest tests/e2e/ --testPathIgnorePatterns=complete-workflow.test.ts",
    "test:e2e:all": "jest tests/e2e/",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "generate:sample": "tsx src/scripts/generate-field-definitions.ts",
    "generate:static-analysis": "tsx src/scripts/generate-static-analysis.ts",
    "debug:inspector": "dotenv npx @modelcontextprotocol/inspector node ./dist/index.js"
  },
  "keywords": [
    "jira",
    "jira-server",
    "atlassian",
    "typescript"
  ],
  "author": "Jira MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^17.2.1",
    "jira-client": "^8.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.14",
    "@types/jira-client": "^7.1.9",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
